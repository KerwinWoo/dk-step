/* pages/order/paydetail/paydetail.wxss */
@import "/pages/order/detail/detail.wxss";
.recevierinfo{
  padding:30rpx;
  position: relative;
  padding-right:50rpx;
  margin-bottom: 0;
}
.recevierinfo .addAddressBtn{
  padding:0 60rpx;
  font-size:32rpx;
  height:70rpx;
  line-height: 70rpx;
  border-radius:35rpx;
  margin:30rpx auto;
}
.recevierinfo .l{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.recevierinfo .more{
  position: absolute;
  width:17rpx;
  height:32rpx;
  right:30rpx;
  top:50%;
  margin-top:-16rpx;
}
.recevierinfo .more image{
  margin-right: 0;
  width:100%;
  height:100%;
}
.btmborder{
  position: relative;
  height:2rpx;
  margin-bottom: 30rpx;
}
.btmborder image{
  width:100%;
  height:2rpx;
  position: absolute;
  left:0;
  top:0;
}
.buynum{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.buynum .title{
  margin-bottom: 0;
}
.exchangeBtn{
  position: fixed;
  bottom:50rpx;
  width:580rpx;
  height:86rpx;
  color:#fff;
  text-align: center;
  line-height: 86rpx;
  border-radius: 43rpx;
  font-size:40rpx;
  left:50%;
  margin-left:-290rpx;
}
.defaultInfo{
  font-weight: bold;
}
.buyercomment input{
  width:100%;
  height:70rpx;
  background:#eee;
  box-sizing: border-box;
  padding-left:30rpx;
  margin-top:20rpx;
  font-size: 24rpx;
}
.payinfo .summary .label{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.hasMgt{
  margin-top:30rpx;
}