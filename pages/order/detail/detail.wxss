.buyercomment textarea{
  width:100%;
  height:120rpx;
  background:#eee;
  box-sizing: border-box;
  padding-left:30rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  padding:20rpx 20rpx 20rpx 30rpx;
}
.buyercomment{
  height: auto;
}
.buyercomment>text{
  font-size:24rpx;
  margin-left:30rpx;
  display: inline-block;
}
.repay{
  width:450rpx;
  height:86rpx;
  border-radius:43rpx;
  line-height: 86rpx;
  margin:0 auto;
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
  text-align: center;
  display: block;
  margin-top:20rpx;
}
