<!--pages/order/detail/detail.wxml-->
<scroll-view class="container hastop{{(isPay? ' hasBottom' : '')}}">
  <dk-nav title="订单详情" hasBackBtn="{{true}}" isFixed="{{true}}" bind:backTo="backTo"></dk-nav>
  <view class="banner">
	  <view class="title">{{orderInfo.order_status_text}}</view>
    <view class="subtitle" wx:if="{{orderInfo.order_status == '301'}}">您的订单已完成，赶紧晒单获得更多奖励吧！</view>
    <view class="subtitle" wx:if="{{orderInfo.order_status == '201'}}">订单正在准备出库，即将赶往你的目的地，请您耐心等待</view>
    <view class="subtitle" wx:if="{{orderInfo.order_status == '0'}}">订单已经提交，请在01时20分钟内完成支付，超时订单将自动取消</view>
    <view class="subtitle" wx:if="{{orderInfo.order_status == '300'}}">订单已经发货，正在飞速赶往你的目的地，请您耐心等待</view>
    <image class="bgicn" wx:if="{{orderInfo.order_status == '301'}}" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/order_complete.png"></image>
    <image class="bgicn" wx:if="{{orderInfo.order_status == '201'}}" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/order_fahuo.png"></image>
    <image class="bgicn" wx:if="{{orderInfo.order_status == '0'}}" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/order_zhifu.png"></image>
    <image class="bgicn" wx:if="{{orderInfo.order_status == '300'}}" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/order_yifahuo.png"></image>
  </view>
  <view class="recevierinfo">
    <view class="l">
      <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/dibiao%402x.png"></image>
    </view>
    <view class="r">
      <view class="t">收货人：<text>行走的蛋壳</text> <text class="phone">13817878787</text></view>
      <view class="b">湖北省武汉市洪山区珞喻路光谷国际商会大厦20楼2013室</view>
    </view>
  </view>
  
  <view class="card">
    <view class="title">商品信息</view>
    <view class="content">
      <view class="pic">
        <view class="imgwrp">
          <image src="{{goodsInfo.list_pic_url}}"></image>
        </view>
      </view>
      <view class="info">
        <view class="l">
          <view class="name">{{goodsInfo.goods_name}}</view>
          <view class="dk">
            <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
            <text>{{goodsInfo.dk_eshell_num}}</text>
          </view>
        </view>
        <view class="r">
          <view class="num">×{{goodsInfo.number}}</view>
          <view class="btn" wx:if="{{orderInfo.order_status == '301'}}">立即晒单</view>
          <view class="btn btn-simple" wx:if="{{orderInfo.order_status == '201'}}" bindtap="bindTzFahuo">催发货</view>
          <view class="btn btn-simple" wx:if="{{orderInfo.order_status == '300'}}" bindtap="toWuliu" data-orderid="{{orderInfo.id}}">查看物流</view>
        </view>
      </view>
    </view>
  </view>
  <view class="payinfo">
    <view class="title">支付详情</view>
    <view class="row">
      <view class="label">蛋壳</view>
      <view class="num">{{orderInfo.dk_eshell_num}}</view>
    </view>
    <view class="row">
      <view class="label">现金</view>
      <view class="num">￥{{orderInfo.actual_price}}</view>
    </view>
    <view class="row">
      <view class="label">运费</view>
      <view class="num">￥0.00</view>
    </view>
    <view class="summary">
      <view class="label">实付：
      <view class="dknum">
        <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
        <text>{{orderInfo.dk_eshell_num}}</text>
      </view>
      <text class="plus" wx:if="{{(orderInfo.actual_price) > 0}}">+</text>
      <text class="unit" wx:if="{{(orderInfo.actual_price) > 0}}">￥{{orderInfo.actual_price}}</text>
    </view>
    </view>
  </view>
  <view class="orderinfo">
    <view>订单编号：<text>{{orderInfo.order_sn}}</text><view class="copybtn" bindtap='copyText' data-text="{{orderInfo.order_sn}}">复制编号</view></view>
    <view>下单时间：{{orderInfo.add_time}}</view>
  </view>
  <button class="contact resetBtn" wx:if="{{orderInfo.order_status != '0'}}" open-type="contact">
    <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/message_icn03.png"></image>
    <text>联系客服</text>
    <image class="icn" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/more02.png"></image>
  </button>
  <view class="pay" wx:if="{{orderInfo.order_status == '0'}}">
    <view class="cancel">取消订单</view>
    <view class="payBtn btn-default" bindtap="gotoPay">去支付</view>
  </view>
</scroll-view>

<dk-toast id="toast" duration="3000" isShow="{{false}}"></dk-toast>
