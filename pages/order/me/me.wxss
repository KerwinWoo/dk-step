/* pages/order/me/me.wxss */
page{
  background:#f2f2f2;
}
.typelist{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size:30rpx;
  background:#fff;
}
.typelist .itm{
  height:73rpx;
  line-height:73rpx;
}
.typelist .itm.active{
  color:#FB793B;
}
.orderlist{
  box-sizing: border-box;
  padding:30rpx;
}
.orderlist .itm{
  background:#fff;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}
.orderlist .itm .wrp{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding:40rpx 30rpx 22rpx 22rpx;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.orderlist .itm .status{
  position: absolute;
  font-size:28rpx;
  font-weight:400;
  color:#F3AB42;
  right:30rpx;
  top:22rpx;
}
.orderlist .itm .pic{
  margin-right:18rpx;
}
.orderlist .itm .pic image-loader{
  width:180rpx;
  height:180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.orderlist .itm .name{
  width:295rpx;
  font-size:28rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.orderlist .itm .num{
  font-size:32rpx;
  font-weight:bold;
}
.orderlist .itm .content .btm{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.orderlist .itm .content{
  flex-grow: 1;
}
.orderlist .itm .btn{
  box-sizing: border-box;
  padding:22rpx 46rpx 22rpx 22rpx;
}
.orderlist .itm .btn{
  position: relative;
  text-align: right;
}
.orderlist .itm .btn .time{
  font-size:28rpx;
  font-weight:400;
  color:#666666;
  height:30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width:300rpx;
  position: absolute;
  left:22rpx;
  top:50%;
  margin-top:-15rpx;
}
.orderlist .itm .btn .time image{
  width:30rpx;
  height:30rpx;
  margin-right:10rpx;
}
.orderlist .itm .btn-default,.orderlist .itm .btn-simple{
  font-size:30rpx;
  color:#fff;
  height:64rpx;
  line-height: 64rpx;
  border-radius:35rpx;
  text-align: center;
  display: inline-block;
  padding:0 47rpx;
  margin-left:40rpx;
}
.nodata{
  padding-top:160rpx;
}
.nodata image{
  width:451rpx;
  height:246rpx;
}