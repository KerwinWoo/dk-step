/* pages/order/wuliu/wuliu.wxss */
.wuliuinfo{
  border-top:1rpx solid #eee;
  padding:30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size:28rpx;
  font-weight:400;
}
.wuliuinfo .r{
  flex-grow: 1;
}
.wuliuinfo .r .orderid{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top:10rpx;
}
.wuliuinfo image{
  width:180rpx;
  height:180rpx;
  margin-right: 30rpx;
}
.wuliuinfo .copybtn{
  width:84rpx;
  height:36rpx;
  border:1rpx solid rgba(153,153,153,1);
  border-radius:18rpx;
  display: inline-block;
  font-size:16rpx;
  line-height: 36rpx;
  text-align: center;
}
.wuliustatus{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.wuliustatus .wrp{
  border-top:1rpx solid #eee;
  padding-top:30rpx;
}
.wuliustatus .wrp .title{
  font-size:28rpx;
  font-weight:bold;
}
.inwrp{
  padding:30rpx 30rpx 30rpx 60rpx;
  box-sizing: border-box;
}
.statuslist .itm{
  font-size:28rpx;
  position: relative;
  box-sizing: border-box;
  width:100%;
  padding:0 0 60rpx 50rpx;
  border-left:1rpx solid #eee;
}
.statuslist .itm:last-child{
  border-left:0;
}
.statuslist .itm.active{
  color:#FB793B;
}
.statuslist .itm .pointwrp{
  position: absolute;
  left:-24rpx;
  top:0;
  width:48rpx;
  height:48rpx;
  background:#fff;
}
.statuslist .itm .content{
  margin-bottom: 15rpx;
}
.statuslist .itm .time{
  color:#999;
  font-size:24rpx;
}
.statuslist .point{
  width:40rpx;
  height:40rpx;
  position: absolute;
  display: inline-block;
  border-radius:50%;
  background:rgba(153,153,153,.3);
  left:50%;
  margin-left:-20rpx;
  top:50%;
  margin-top:-20rpx;
}
.statuslist .point:before{
  content:'';
  position: absolute;
  display: inline-block;
  border-radius:50%;
  left:50%;
  margin-left:-14rpx;
  top:50%;
  margin-top:-14rpx;
  width:28rpx;
  height:28rpx;
  background:#666;
}
.statuslist .active .point{
  background:rgba(251,121,59,0.3);
}
.statuslist .active .point:before{
  background:rgba(251,121,59,1);
}
.statuslist .itm.active .time{
  color:#FB793B;
}