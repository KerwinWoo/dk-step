/* pages/game/luckywheel/luckywheel.wxss */
page{
  background:url("https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/bg_game.png");
  background-size: cover;
  padding-top:128rpx;
  box-sizing: border-box;
}
.container{
  padding-bottom: 40rpx;
}
image{
  width:100%;
  height:100%;
}
.tptitle{
  width:454rpx;
  height:87rpx;
  margin:60rpx auto 40rpx auto;
}
.subtitle{
  width:215rpx;
  height:48rpx;
  margin:0 auto;
  margin-bottom: 20rpx;
}
.box{
  width:607rpx;
  height:698rpx;
  margin:0 auto;
  position: relative;
  box-sizing: border-box;
  padding:112rpx 52rpx 52rpx 52rpx;
}
.box .bg{
  position:absolute;
  left:0;
  top:0;
  z-index: 2;
}
.box .wrp{
  width:100%;
  height:100%;
  position: relative;
  z-index: 2;
}
.box .wrp .itm{
  width:157rpx;
  height:162rpx;
  position: relative;
}
.box .wrp .row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom:22rpx;
}
.box .wrp .itm .gift{
  width:86rpx;
  height:86rpx;
  position: absolute;
  margin-left:-43rpx;
  left:50%;
  top:20rpx;
  z-index: 3;
}
.box .wrp .itm .itmbg{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  z-index: 2;
}
.box .wrp .itm .start{
  width:174rpx;
  height:118rpx;
  position: absolute;
  left:50%;
  top:50%;
  margin-left:-87rpx;
  margin-top:-59rpx;
}
.box .wrp .itm .starttxt{
  width:84rpx;
  height:40rpx;
  position: absolute;
  left:50%;
  top:50%;
  margin-left:-44rpx;
  margin-top:-26rpx;
}
.box .tip{
  width:428rpx;
  height:123rpx;
  background:rgba(255,215,113,0.76);
  border-radius:0px 0px 10rpx 10rpx;
  font-size: 22rpx;
  text-align: center;
  position:absolute;
  left:50%;
  bottom:-112rpx;
  margin-left:-214rpx;
  z-index: 1;
  transition: all .5s;
  box-sizing: border-box;
  padding-top:20rpx;
}
.box .tip.close{
  transform: translateY(-100%);
}
.box .tip .title{
  color:#FD521D;
  margin-bottom: 10rpx;
}
.prograssbar{
  width:322rpx;
  height:17rpx;
  background:#fff;
  border-radius:9rpx;
  margin:0 auto;
  overflow: hidden;
}
.prograssbar .itm{
  position: relative;
  width:25%;
  height:100%;
  background: #F3FF4A;
  border-radius:9rpx;
}
.progresstxt{
  width:322rpx;
  height:17rpx;
  margin:0 auto;
  color:#fff;
  font-size:18rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top:10rpx;
}
.progresstxt .itm{
  width:25%;
  text-align: right;
}
.egg{
  text-align: center;
  font-size:30rpx;
  color:rgba(255,255,255,1);
  margin:143rpx 0 35rpx 0;
}
.inviteBtn{
  height:86rpx;
  background:linear-gradient(90deg,rgba(254,210,108,1) 0%,rgba(255,138,0,1) 100%);
  border-radius:43rpx;
  line-height:86rpx;
  font-size:40rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  text-align: center;
  margin:0 auto;
  width:580rpx;
}