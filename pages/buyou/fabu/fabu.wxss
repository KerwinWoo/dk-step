/* pages/buyou/fabu/fabu.wxss */
.textarea{
  width:100%;
  box-sizing: border-box;
  padding:22rpx 30rpx;
  height:177rpx;
}
.textarea textarea{
  width:100%;
  height:100%;
  font-size:28rpx;
}
.uploadImg{
  width:200rpx;
  height:200rpx;
  background:#eee;
  margin-left:30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius:10rpx;
}
.uploadImg image{
  width:72rpx;
  height:56rpx;
}
.getaddress{
  margin:30rpx;
  height:50rpx;
  background:#eee;
  border-radius:25rpx;
  color:#999;
  font-size:24rpx;
  display: inline-block;
  padding:0 20rpx;
  line-height:50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  max-width:600rpx;
}
.getaddress image{
  width:16rpx;
  height:22rpx;
  margin-right:8rpx;
}
.topiclist{
  padding:0 30rpx;
  box-sizing: border-box;
  width:100%;
}
.topiclist .wrp{
  border-top:1rpx solid #eee;
  padding-top:30rpx;
}
.topiclist .topic{
  height:46rpx;
  background:#eee;
  border-radius:23rpx;
  text-align: center;
  font-size:24rpx;
  line-height: 46rpx;
  position: relative;
  display: inline-block;
  padding:0 26rpx;
}
.topiclist .topic.choosed{
  border:1rpx solid rgba(254,210,108,1);
  background:#fff;
  color:#FF9234;
}
.topiclist .wrp .row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.topiclist .wrp .tip{
  margin-left:12rpx;
  font-size:24rpx;
  color:#666;
}
.topiclist .wrp .title image{
  width:27rpx;
  height:24rpx;
  margin-right:20rpx;
}
.topiclist .wrp .title{
  font-size:28rpx;
  font-weight:bold;
  margin:30rpx 0;
}
.topic .hot{
  display: inline-block;
  font-size:24rpx;
  background:#F4B344;
  color:#fff;
  border-radius: 2rpx;
  width:30rpx;
  height:30rpx;
  line-height:30rpx;
  margin-left:20rpx;
}
.topics .topic{
  margin-right:30rpx;
  margin-bottom: 30rpx;
}
.topic .remove{
  display: inline-block;
  position: absolute;
  right:0;
  top:-13rpx;
  width:26rpx;
  height:26rpx;
}
.common_inviteBtn{
  width:580rpx;
  margin-left:-290rpx
}