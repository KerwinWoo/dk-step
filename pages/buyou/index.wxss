.topiccontentlist{
  padding-bottom: 0;
  background:#f2f2f2;
  overflow: hidden;
}
.topiccontentlist>.itm{
  position: relative;
  box-sizing: border-box;
  padding:30rpx 30rpx 20rpx 170rpx;
  margin-bottom: 30rpx;
  background:#fff;
}
.topiccontentlist>.itm .photo{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  position: absolute;
  left:30rpx;
  top:30rpx;
  overflow: hidden;
}
.topiccontentlist>.itm .photo image{
  width:100%;
  height:100%;
}
.topiccontentlist>.itm .name{
  width:400rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.topiccontentlist>.itm .name .nickname{
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:32rpx;
  font-weight:bold;
  overflow: hidden;
  max-width:300rpx;
}
.topiccontentlist>.itm .name .istop{
  width:50rpx;
  height:28rpx;
  background:#FF0000;
  border-radius:6rpx;
  text-align: center;
  display: inline-block;
  font-size:18rpx;
  color:#fff;
  line-height: 28rpx;
  margin-left:10rpx;
}
.topiccontentlist>.itm .topictype{
  background:#F4F4F4;
  display: inline-block;
  color:#FF8E00;
  margin:10rpx 0;
  border-radius: 15rpx;
  padding:0 10rpx;
  font-size:24rpx;
}
.topiccontentlist>.itm .topictype image{
  width:20rpx;
  height:18rpx;
  margin-right:4rpx;
}
.topiccontentlist>.itm .subscribe{
  position:absolute;
  top:30rpx;
  right:30rpx;
  width:103rpx;
  height:50rpx;
  line-height:50rpx;
  color:#FF8E00;
  border:1rpx solid rgba(255,142,0,1);
  border-radius:25rpx;
  text-align: center;
}
.topiccontentlist>.itm .subscribe image{
  width:18rpx;
  height:18rpx;
  margin-right:6rpx;
}
.topiccontentlist>.itm .content{
  margin:10rpx 0;
  font-size:28rpx;
}
.topiccontentlist>.itm .imgcont{
  width:100%;
  margin-top:20rpx;
}
.topiccontentlist>.itm .imgcont .wrp{
  width:33.333333333333%;
  float:left;
  box-sizing: border-box;
  padding-right:15rpx;
  padding-bottom:15rpx;
}
.topiccontentlist>.itm .imgcont .subwrp{
  width:100%;
  padding-bottom:100%;
  height:0;
}
.topiccontentlist>.itm .imgcont image-loader{
  display: inline-block;
  width:100%;
  border-radius: 3px;
  position: relative;
  overflow: hidden;
  padding-bottom:100%;
  height:0;
}
.topiccontentlist>.itm .imgcont image-loader image{
  position: absolute;
  left:0;
  top:0;
}
.topiccontentlist>.itm .imgcont image{
  width:100%;
  height:100%;
}
.topiccontentlist>.itm .addrs{
  color:#999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin:10rpx 0 20rpx 0;
  font-size:24rpx;
}
.topiccontentlist>.itm .addrs image{
  width:16rpx;
  height:24rpx;
  margin-right:6rpx;
}
.topiccontentlist>.itm .addrs .point{
  width:4rpx;
  height:4rpx;
  border-radius:50%;
  background:#999;
  display: inline-block;
  margin:0 20rpx;
}
.topiccontentlist>.itm .addrs .txtov{
  width:520rpx;
}
.topiccontentlist>.itm .opers{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.topiccontentlist>.itm .opers .itm{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:24rpx;
  color:#666;
  padding:4rpx 10rpx;
}
.topiccontentlist>.itm .opers image{
  margin-right:10rpx;
	width:32rpx;
	height:32rpx;
}
.releaseBtn{
  position:fixed;
  bottom:200rpx;
  right:30rpx;
  width:120rpx;
  height:120rpx;
  background:linear-gradient(90deg,rgba(254,99,54,1) 0%,rgba(243,164,71,1) 100%);
  border-radius:50%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color:#fff;
  z-index: 999;
  transition: right .3s;
}
.releaseBtn image{
  width:66rpx;
  height:75rpx;
}
.releaseBtn.hide{
  right:-120rpx;
}
.nodata{
  width:100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height:630rpx;
  background:#fff;
}
.nodata image{
  width:451rpx;
  height:237rpx;
}
.nodata .title{
  margin-top:20rpx;
  font-size:28rpx;
}
.txtov{
  width:220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}