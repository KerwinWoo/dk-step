/* pages/buyou/index.wxss */
.container,page{
  background:#f2f2f2;
}
.wrapper{
  background:#fff;
  padding:28rpx 0;
}
.tptitle{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.tptitle image{
  width:48rpx;
  height:48rpx;
}
.tptitle .message{
  position:relative;
  z-index: 100000;
}
.tptitle .message.fixed{
  position:fixed;
  top:26rpx;
  right:50rpx;
  z-index:100000;
}
.tptitle .message .flag{
  position: absolute;
  width:32rpx;
  height:32rpx;
  background:#FF000F;
  border-radius:50%;
  right:-8rpx;
  top:-8rpx;
  display: inline-block;
  text-align: center;
  line-height: 32rpx;
  color:#fff;
  font-size:22rpx;
}
.comtitle{
  font-size:44rpx;
  font-weight:bold;
}
.topiclist>.itm{
  width:268rpx;
  height:148rpx;
  border-radius:10rpx;
  color:#fff;
  font-size:32rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  float:left;
  font-weight: bold;
}
.topiclist>.itm .submask{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
}
.topiclist>.itm image-loader{
  position: absolute;
  left:0;
  top:0;
}
.topiclist>.itm image{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  z-index: 1;
}
.topiclist>.itm text{
  position:relative;
  z-index:2;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding:0 6rpx;
  width:100%;
  box-sizing:border-box;
  text-align:center;
}
.topiclist>.itm .flagcont{
  position: absolute;
  left:50rpx;
  top:0;
  width:30rpx;
  height:32rpx;
  font-size:20rpx;
  text-align: center;
}
.topiclist>.itm .flagcont image{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}
.subtitle{
  padding:5rpx 0 15rpx 0;
  font-size:24rpx;
  font-weight:400;
  color:#999999;
}
.gap{
  margin-top:30rpx;
}
.tablist{
  background:#fff;
  height:90rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding-left:30rpx;
  position: relative;
  padding-top:10rpx;
}
.tablist .tag{
  width:32rpx;
  height:8rpx;
  position: absolute;
  left:59rpx;
  bottom: 0;
  transition: all .3s;
  border-radius: 3rpx;
	background:linear-gradient(0deg,rgba(254,99,54,1) 0%,rgba(243,164,71,1) 100%);
	border-radius:3rpx;
}
.tablist .tag.gz{
  left:189rpx;
}
.tablist.fixed{
  padding-bottom:10rpx;
  position:fixed;
  width:100%;
  left:0;
  top:0;
  background:#fff;
  z-index:99999;
  box-shadow: 0px 10rpx 10rpx -10rpx #ddd;
}
.tablist .itm{
  font-size:34rpx;
  margin-right:40rpx;
  position: relative;
  float:left;
  transition: all .3s;
  width:90rpx;
}
.tablist .itm.active{
  font-size:44rpx;
  font-weight:bold;
}
