.banner{
  width:100%;
  height:216rpx;
  margin-bottom: 30rpx;
}
image{
  width:100%;
  height:100%;
}
.taskcont{
  background: #fff;
  padding:30rpx;
  box-sizing: border-box;
}
.taskcont .title{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}
.taskcont .title .t1{
  font-size:30rpx;
  font-weight:bold;
  margin-right:24rpx;
}
.taskcont .title .t2{
  font-size:24rpx;
  color:#666;
}
.tasklist .itm{
  height:120rpx;
  box-shadow:0px 0px 18rpx 0px rgba(129,129,129,0.14);
  border-radius:10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  box-sizing: border-box;
  padding:15rpx 15rpx 15rpx 30rpx;
  margin-bottom: 30rpx;
}
.tasklist .itm .photo{
  width:90rpx;
  height:90rpx;
}
.tasklist .itm .info{
  padding-left:50rpx;
}
.tasklist .itm .name{
  font-size:28rpx;
  margin-bottom: 8rpx;
}
.tasklist .itm .desc{
  font-size:20rpx;
  color:#999999;
}
.tasklist .itm .step{
  display: inline-block;
  width:128rpx;
  height:50rpx;
  border-radius:25rpx;
  text-align: center;
  line-height: 50rpx;
  color:#fff;
  font-size:24rpx;
  position: absolute;
  right:15rpx;
  top:50%;
  margin-top:-25rpx;
}