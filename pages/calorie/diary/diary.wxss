/* pages/calorie/diary/diary.wxss */
.ttitle{
  height:80rpx;
  line-height: 80rpx;
  padding:0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width:100%;
  box-sizing: border-box;
}
.ttitle .title{
  font-size:30rpx;
  font-weight:bold;
}
.ttitle .history{
  font-size: 24rpx;
}
.ttitle .history image{
  width:22rpx;
  height:22rpx;
}
.ttitle .history text{
  margin:0 10rpx;
}
.chartcont{
  width:100%;
  height:360rpx;
  border-bottom: 1px solid #eee;
}
ff-canvas {
  width: 100%;
  height: 100%;
}
.postcont{
  padding:30rpx;
  width:100%;
  box-sizing: border-box;
}
.postcont .wrp{
  background:#fff;
  box-shadow:0px 0px 19rpx 0px rgba(89,89,89,0.11);
  border-radius:2px;
  overflow: hidden;
}
.postcont .photo image.post{
  width:100%;
  height:884rpx;
}
.postcont .photo{
  position: relative;
}
.postcont .photo .content{
  position: absolute;
  left:30rpx;
  bottom:20rpx;
  font-weight: bold;
  color:#fff;
}
.postcont .photo .user{
  position: absolute;
  bottom:200rpx;
  left:30rpx;
  z-index: 2;
}
.postcont .photo .user image{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  border:1rpx solid #eee;
}
.postcont .photo .user>view{
  font-size:28rpx;
  font-weight:bold;
  color:#fff;
  width:230rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-top:6rp;
}
.postcont .photo .content .steptitle{
  font-size: 32rpx;
}
.postcont .photo .content .stepnum{
  font-size:70rpx;
}
.postcont .photo .topic{
  position: absolute;
  right:30rpx;
  bottom:40rpx;
  width:228rpx;
  height:84rpx;
}
.postcont .info{
  padding:30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.postcont .info image{
  width:108rpx;
  height:108rpx;
  border-radius:50%;
}
.postcont .info .slogan{
  font-size:32rpx;
  font-weight:bold;
  line-height: 50rpx;
}
.postcont .info .txt{
  font-size:24rpx;
  margin-top:10rpx;
}
.postcont .info .code{
  text-align: center;
}
.btns{
  width:100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: auto;
  justify-content: space-between;
  padding:0 60rpx 30rpx 60rpx;
}
.savePost{
  width:360rpx;
  height:86rpx;
  line-height: 86rpx;
  border-radius:43rpx;
  text-align: center;
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
}
.savePost.refresh{
  width:175rpx;
  font-size:24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.savePost.refresh image{
  width:50rpx;
  height:52rpx;
  margin-right:10rpx;
  display: inline-block;
}
.tag{
  height:235rpx;
  box-sizing: border-box;
  padding-top:30rpx;
  text-align: center;
}
.tag .title{
  font-size:32rpx;
  font-weight:bold;
  text-align: center;
  margin-bottom:16rpx;
}
.tag image{
  width:63rpx;
  height:70rpx;
}
.tag .itm{
  display: inline-block;
  margin:0 20rpx;
}