/* pages/team/team.wxss */
page{
  background:#f2f2f2;
}
image{
  width:100%;
  height:100%;
}
.stepcont{
  padding:30rpx 70rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size:28rpx;
  text-align: center;
  background:#fff;
}
.stepcont .itm .pic{
  width:138rpx;
  height:138rpx;
}
.stepcont .itm .arrow{
  width:70rpx;
  height:24rpx;
}
.formTab{
  width:100%;
  box-sizing: border-box;
  padding:30rpx 30rpx 0 30rpx;
}
.formTab>.wrp{
  background:#fff;
  padding:30rpx 60rpx;
}
.formTab input,.formTab textarea{
  background:#eee;
  padding:10rpx 22rpx;
  font-size:28rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.formTab input{
  height:90rpx;
  line-height: 90rpx;
}
.formTab textarea{
  width:100%;
  height:170rpx;
  padding-left:14rpx;
}
.formTab .row{
  margin-bottom: 30rpx;
}
.pickerrow{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.pickerrow .title{
  font-size:30rpx;
  font-weight:bold;
}
.pickerrow .more{
  width:20rpx;
  height:13rpx;
  margin-left:4rpx;
}
.friendlist .itm{
  float:left;
  width:25%;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}
.friendlist .itm image-loader,.friendlist .itm .photo{
  width:100%;
  height:100%;
} 
.friendlist .itm .photo{
  border-radius: 50%;
  overflow: hidden;
}
.friendlist .itm .wrp{
  width:120rpx;
  height:120rpx;
}
.friendlist .itm .name{
  font-size: 24rpx;
  text-align: center;
  padding-top:12rpx;
  text-overflow: ellipsis;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
}
.inviteBtn .wrp{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background:#eee;
  border-radius: 50%;
}
.inviteBtn image{
  width:51rpx;
  height:51rpx;
}
.createBtn{
  width:580rpx;
  height:86rpx;
  border-radius:43rpx;
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
  margin:0 auto;
  text-align: center;
  line-height: 86rpx;
  margin:0 auto;
  background:linear-gradient(0deg,rgba(254,210,108,1) 0%,rgba(255,138,0,1) 100%);
}
.createBtn.disable{
  background:#eee;
}
.tip{
  font-size:24rpx;
  color:#FFA21E;
  text-align: center;
  margin-top:10rpx;
}