.formTab{
  width:100%;
  box-sizing: border-box;
}
.formTab>.wrp{
  padding:30rpx;
}
.formTab input,.formTab textarea{
  background:#eee;
  padding:0 36rpx;
  font-size:28rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.formTab input{
  height:90rpx;
  line-height: 90rpx;
}
.formTab textarea{
  width:100%;
  height:170rpx;
  padding-left:30rpx;
  padding-top:16rpx;
}
.formTab .row{
  margin-bottom: 30rpx;
}
.pickerrow{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.picker_num{
  font-size:28rpx;
}
.pickerrow .title{
  font-size:30rpx;
  font-weight:bold;
}
.pickerrow .more{
  width:24rpx;
  height:14rpx;
  margin-left:8rpx;
}
.friendlist .itm{
  float:left;
  width:25%;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}
.friendlist .itm image-loader,.friendlist .itm .photo{
  width:100%;
  height:100%;
} 
.friendlist .itm .photo{
  border-radius: 50%;
  overflow: hidden;
}
.friendlist .itm .wrp{
  width:120rpx;
  height:120rpx;
  margin:0 auto;
}
.friendlist .itm .name{
  font-size: 24rpx;
  text-align: center;
  padding-top:12rpx;
  text-overflow: ellipsis;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  color:#333;
}
.inviteBtn .wrp{
  background:#eee;
  border-radius: 50%;
}
.inviteBtn .wrp .photo{
  text-align: center;
  width:120rpx;
  height:120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.inviteBtn image{
  width:51rpx;
  height:51rpx;
  display: inline-block;
}
.createBtn{
  width:580rpx;
  height:86rpx;
  border-radius:43rpx;
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
  margin:0 auto;
  text-align: center;
  line-height: 86rpx;
  display: block;
  margin-top:100rpx;
}
.createBtn.disabled{
  background:#eee!important;
  color:#999;
}
.tip{
  font-size:24rpx;
  text-align: center;
  margin-top:10rpx;
}
button[disabled]{
  background:#eee!important;
  color:#999!important;
}
.require{
  border:1px solid #FE6134;
}