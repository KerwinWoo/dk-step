/* pages/team/myteam/myteam.wxss */
.banner image{
  width:100%;
  height:216rpx;
}
image{
  width:100%;
  height:100%;
}
.teamlist{
  box-sizing: border-box;
  padding:30rpx;
}
.teamlist .itm{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding:20rpx 30rpx;
  box-shadow:0px 0px 19rpx 0px rgba(89,89,89,0.17);
  border-radius:10rpx;
  position: relative;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.teamlist .createFlag{
  position: absolute;
  right:-50rpx;
  top:-50rpx;
  font-size:20rpx;
  font-weight: bold;
  color:#fff;
  height:100rpx;
  width:100rpx;
  background:#FB793B;
  transform: rotate(45deg);
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
}
.teamlist .itm .photo{
  margin-right:30rpx;
  position: relative;
  width:160rpx;
  height:160rpx;
}
.teamlist .itm .photo image{
  border-radius: 50%;
  width:100%;
  height:100%;
}
.teamlist .itm .photo image.flag{
  position: absolute;
  right:0;
  top:0;
  border-radius:0;
}
.teamlist .itm .photo .flagcont{
  width:50rpx;
  height:58rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  color:#fff;
  font-size:20rpx;
  z-index: 1;
  line-height: 58rpx;
  text-align: center;
}
.teamlist .itm .photo .flagcont text{
  position: relative;
}
.teamlist .itm .more{
  height:100%;
  width:15rpx;
  position: absolute;
  right:30rpx;
  top:0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.teamlist .itm .info{
  font-size: 28rpx;
}
.teamlist .itm .info .name{
  font-size:30rpx;
  font-weight:bold;
  margin-bottom: 10rpx;
}
.teamlist .itm .info .member{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.teamlist .itm .info .member view:first-child{
  margin-right:40rpx;
}
.more image{
  width:15rpx;
  height:28rpx;
}
.createTeamBtn{
  width:360rpx;
  height:70rpx;
  border-radius:35rpx;
  font-size:30rpx;
  color:#FF8E00;
  text-align: center;
  line-height:70rpx;
  position: fixed;
  bottom:36rpx;
  left:50%;
  margin-left:-180rpx;
}