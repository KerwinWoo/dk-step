/* pages/rule/friendadd/friendadd.wxss */
.container{
  margin-top: 128rpx;
}
image{
  width:100%;
  height:100%;
}
.ttitle{
  width:359rpx;
  height:62rpx;
  margin:30rpx auto;
  padding-bottom: 30rpx;
  padding-top:20rpx;
}
.rule-cont{
  width:560rpx;
  background:#fff;
  box-shadow:0px 0px 19rpx 0px rgba(89,89,89,0.17);
  border-radius:10rpx;
  position: relative;
  margin:30rpx auto 60rpx auto;
  padding:60rpx 30rpx 1rpx 30rpx;
  box-sizing: border-box;
}
.rule-cont .title{
  width:314rpx;
  height:90rpx;
  left:50%;
  position: absolute;
  margin-left:-157rpx;
  top:-45rpx;
  color:#fff;
  font-size:36rpx;
  font-weight:bold;
}
.rule-cont .title image{
  position: absolute;
  left:0;
  top:0;
  z-index: 1;
}
.rule-cont .title text{
  position: relative;
  z-index: 2;
  display: inline-block;
  width:100%;
  height:100%;
  text-align: center;
  line-height: 84rpx;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.row .el{
  width:110rpx;
  height:110rpx;
  background:rgba(254,247,227,1);
  border-radius:50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.row .el .t1{
  font-size:26rpx;
  font-weight: 800;
  color:#E56A36;
}
.row .el .t1 image{
  width:66rpx;
  height:66rpx;
  display: inline-block;
}
.row .el .unit,.row .el .t2{
  color:#E3B172;
  font-size:14rpx;
}
.row .flg{
  width:26rpx;
  height:26rpx;
}

.inviteBtn{
  position:fixed;
  width:450rpx;
  height:86rpx;
  background:linear-gradient(0deg,rgba(244,181,68,1) 0%,rgba(242,162,65,1) 100%);
  box-shadow:0px 1px 24rpx 0px rgba(255,107,14,0.21);
  border-radius:43rpx;
  text-align: center;
  line-height: 86rpx;
  left:50%;
  bottom:30rpx;
  margin-left:-225rpx;
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
}
.list .itm{
  font-size:24rpx;
  line-height:30rpx;
  margin-bottom: 20rpx;
}
.highlight{
  color:#FFA11E;
}
.tip{
  text-align: center;
  padding-bottom: 30rpx;
}
