<!--pages/mall/goodsdetail/goodsdetail.wxml-->
<view class="container hastop">
  <dk-nav title="商品详情" hasBackBtn="{{true}}" isFixed="{{true}}" bind:backTo="backTo"></dk-nav>
  <view class="goodsimage">
    <swiper
      indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}"
      interval="{{interval}}"
      duration="{{duration}}"
    >
      <block wx:for="{{imgUrls}}" wx:key="{{item.id}}">
        <swiper-item>
          <image src="{{item.img_url}}" mode="aspectFill" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="info">
      <view class="wrp">
        <view class="name">{{info.name}}</view>
        <view class="subinfo">
          <view class="dknum">
            <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
            <text>{{info.dkEshellNum}}</text>
            <text class="plus" wx:if="{{info.retail_price && info.retail_price > 0}}">+</text>
            <text class="unit" wx:if="{{info.retail_price && info.retail_price > 0}}">¥</text>
            <text wx:if="{{info.retail_price && info.retail_price > 0}}">{{info.retail_price}}</text>
          </view>
          <view class="price">
            原价:<text>￥{{info.market_price}}</text>
          </view>
          <view class="r">
            <view wx:if="{{info.freeMail == 1}}" class="baoyou">包邮</view>
            <view wx:if="{{info.freeMail == 0}}" class="baoyou">邮费:{{info.mailCost}}元</view>
            <view class="sy">剩余<text>{{info.goods_number}}</text>件</view>
          </view>
          <!-- <view class="exchangeoption" wx:if="{{isInvite}}">
            兑换条件：邀请<text>{{info.dkInvitationNum}}</text>人
          </view> -->
        </view>
      </view>
    </view>
  </view>
  <view class="standard">
    <view class="itm">
      <view class="icn">
        <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icn_bao.png" lazy-load></image>
        <view>正品保障</view>
      </view>
    </view>
    <view class="itm">
      <view class="icn">
        <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icn_zhen.png" lazy-load></image>
        <view>品质甄选</view>
      </view>
    </view>
    <view class="itm">
      <view class="icn">
        <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icn_pei.png" lazy-load></image>
        <view>买贵就赔</view>
      </view>
    </view>
    <view class="itm">
      <view class="icn">
        <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icn_shou.png" lazy-load></image>
        <view>售后无忧</view>
      </view>
    </view>
  </view>
