/* pages/mall/index.wxss */
page{
  background:#f2f2f2;
}
.navbar{
  position: relative;
  padding-left:30rpx;
  box-sizing: border-box;
  font-size: 0;
  background:#fff;
}
.navbar .itm{
  display: inline-block;
  font-size: 34rpx;
  margin-right:30rpx;
  height:60rpx;
}
.navbar .itm.active{
  font-weight: bold;
  color:#FFB200;
  font-size: 36rpx;
  border-bottom: 4rpx solid #FFB200;
}
.fixedNav{
  position:fixed;
  left:0;
  top:128rpx;
  z-index: 999;
}
.goodlist{
  margin:30rpx 0;
  background:#fff;
  padding:30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  margin-top:90rpx;
}