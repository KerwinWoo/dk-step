<!--index.wxml-->
<refresh-view id='refreshView' hasTop="true" backgroundColor="#f2f2f2" bind:onRefresh="onPullDownRefresh"/>
<scroll-view class="container" bindtouchstart='handletouchstart' bindtouchmove='handletouchmove' bindtouchend='handletouchend' bindtouchcancel='handletouchcancel'>
  <view class="stepcont">
    <dk-nav title="蛋壳步数换" hasBackBtn="{{false}}" isFixed="{{true}}"></dk-nav>
    <view class="w">
      <view class="t">
        <navigator open-type="navigate" url="/pages/me/dk/dk" hover-class="none">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
          <text>{{myDk}}</text>
        </navigator>
        <navigator open-type="navigate" url="/pages/calorie/diary/diary" hover-class="none">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-calorie.png"></image>
          <text>卡路里日记</text>
        </navigator>
      </view>
      <view class="steps">
        <view class="mstep" id="mstep">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ball-b.png"></image>
          <view class="textcont" bindtap="doExchange">
            <view class="title">今日步数</view>
            <view class="num">{{userStep}}</view>
            <view class="exchange">点击兑换</view>
            <view class="tip">每日24点前清零</view>
          </view>
        </view>
        <view wx:for="{{ssteps}}" 
          wx:key="{{id}}" 
          class="{{item.statusCls}}" 
          style="color:{{(item.type == 1) ? '#FF2467' : '#FF7110'}};animation-delay:{{item.style.animationDelay}};left:{{item.style.left}}rpx;top:{{item.style.top}}rpx;" 
          data-id="{{item.id}}" 
          data-step="{{item.value}}" 
          bindtap="pickStep">
          <image src="{{(item.type == 1) ? 'https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ball-s.png' : 'https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ball-s2.png'}}"></image>
          <text>{{item.value}}</text>
          <view>{{item.name}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="invitecont">
    <button class="inviteBtn btn-default" hover-class="btnhover" open-type="share">邀请好友永久加成</button>
    <view class="tip">
      <view>
        <text>每邀请一个好友，额外获得好友10%蛋壳加成</text>
        <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/hand.png"></image>
      </view>
    </view>
  </view>
  
  <view class="w">
    <view class="menulist">
      <navigator class="itm" url="/pages/game/luckywheel/luckywheel" hover-class="none">
        <view><image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icon01.png"></image></view>
        <view>幸运转盘</view>
      </navigator>
      <navigator class="itm" url="/pages/task/task" hover-class="none">
        <view><image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icon02.png"></image></view>
        <view>领取任务</view>
      </navigator>
      <navigator class="itm" url="/pages/rule/friendadd/friendadd" hover-class="none">
        <view><image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icon05.png"></image></view>
        <view>保存海报</view>
      </navigator>
      <navigator class="itm" url="/pages/me/friend/friend" hover-class="none">
        <view><image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icon03.png"></image></view>
        <view>好友加成</view>
      </navigator>
      <navigator class="itm" url="/pages/me/friend/friend" hover-class="none">
        <view><image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/icon04.png"></image></view>
        <view>好友列表</view>
      </navigator>
    </view>
    <view class="activlsit clearfix">
      <view class="itm">
        <navigator class="wrp" url="/pages/buyou/index" open-type="switchTab">
          <view class="title">步友广场</view>
          <view class="subtitle">发现更多有趣的人和物</view>
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/buyou%402x.png"></image>
        </navigator>
      </view>
      <view class="itm">
        <navigator class="wrp" url="/pages/team/team" open-type="switchTab">
          <view class="title">健步团</view>
          <view class="subtitle">亲朋好友一起玩</view>
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/tiaozhansai%402x.png"></image>
        </navigator>
      </view>
    </view>
    <view class="hb">
      <view class="comtitle spe" style="padding-bottom:0;">
        <text>天天签到</text>
        <view class="switch-cont">
          <text>设置签到提醒</text>
          <dk-switch style="display: inline-block;" status="{{settingStatus}}" bindtap="switchTap"></dk-switch>
        </view>
      </view>
      <view class="wrp">
        <image class="bg" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/hb.png"></image>
        <image bindtap="kaiHongbao" animation="{{kaiAnimation}}" class="kai" src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/kai.png"></image>
        <view>
          <view class="subtitle">今日已签到<text>30000</text>人</view>
          <view class="title">每天签到领取步数奖励</view>
        </view>
      </view>
    </view>
  </view>
  
  <view class="section npdb">
    <view class="comtitle">
      <text>新人专区</text>
      <text class="comment">新人享有1次免费兑换福利</text>
    </view>
    <scroll-view scroll-x  class="goodlist goodlist_n clearfix">
      <view class="itm" wx:for="{{itemsNew}}"
            wx:key="{{id}}"
            bindtap="viewGoodsDetail">
        <view class="wrp">
          <view class="photo">
            <image-loader 
              original-image="{{item.list_pic_url}}" 
              mode="aspectFill">
            </image-loader>
          </view>
          <view class="content">
            <view class="name">{{item.name}}</view>
            <view class="info">
              <view class="l">
                <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
                <text>{{item.dkEshellNum}}</text>
              </view>
              <view  class="r">已兑换<text>{{item.changeNumber}}</text>人</view>
            </view>
            <view class="exchangeBtn btn-default">免费兑换</view>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="section invitesection">
    <view class="comtitle">
      <text>邀请专区</text>
      <text class="comment">好友越多可兑换的商品越好</text>
    </view>
    <view class="goodlist clearfix">
      <view class="itm" wx:for="{{itemsInvite}}"
            wx:key="{{id}}" bindtap="viewIvtGoodsDetail">
        <view class="wrp">
          <view class="invitenum">当日邀请{{item.dkInvitationNum}}人可兑换</view>
          <view class="photo">
            <image-loader 
              original-image="{{item.list_pic_url}}" 
              mode="aspectFill">
            </image-loader>
          </view>
          <view class="content">
            <view class="name">{{item.name}}</view>
            <view class="info">
              <view class="l">
                <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
                <text>{{item.dkEshellNum}}</text>
              </view>
              <view  class="r">已兑换<text>{{item.changeNumber}}</text>人</view>
            </view>
            <view class="exchangeBtn">免费兑换</view>
          </view>
        </view>
      </view>
    </view>
    <navigator class="getMore" url="/pages/mall/index">点击查看更多商品</navigator>
  </view>
  <view class="section">
    <view class="comtitle">
      <text>步友专享</text>
      <text class="comment">在乎你的每一步，步数当钱花</text>
    </view>
    <view class="goodlist clearfix">
      <view class="itm" wx:for="{{itemsValue}}"
            wx:key="{{id}}" bindtap="viewIvtGoodsDetail">
        <view class="wrp">
          <view class="photo">
            <image-loader 
              original-image="{{item.list_pic_url}}" 
              mode="aspectFill">
            </image-loader>
          </view>
          <view class="content">
            <view class="name">{{item.name}}</view>
            <view class="info">
              <view class="l">
                <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
                <text>{{item.dkEshellNum}}</text>
              </view>
              <view  class="r">已兑换<text>{{item.changeNumber}}</text>人</view>
            </view>
            <view class="exchangeBtn">免费兑换</view>
          </view>
        </view>
      </view>
    </view>
    <navigator class="getMore" url="/pages/mall/index">点击查看更多商品</navigator>
  </view>
  <view class="section" style="padding-bottom:20rpx;">
    <view class="comtitle">
      <text>超值专区</text>
      <text class="comment">超值商品限时换</text>
    </view>
    <view class="goodlist clearfix">
      <view class="itm" wx:for="{{itemsNew}}"
            wx:key="{{id}}" bindtap="viewIvtGoodsDetail">
        <view class="wrp">
          <view class="photo">
            <image-loader 
              original-image="{{item.picUrl}}" 
              mode="aspectFill">
            </image-loader>
          </view>
          <view class="content">
            <view class="name">{{item.name}}</view>
            <view class="info">
              <view class="l">
                <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/i-egg.png"></image>
                <text>{{item.egg}}</text>
              </view>
              <view  class="r">已兑换<text>{{item.person}}</text>人</view>
            </view>
            <view class="exchangeBtn">免费兑换</view>
          </view>
        </view>
      </view>
    </view>
    <!-- <navigator class="getMore" url="/pages/mall/index">点击查看更多商品</navigator> -->
  </view>
  
  <view class="moretip">
    更多商品每天上新，敬请期待~
  </view>
  
  <view class="mask" wx:if="{{showMask}}">
    <view class="hongbao" wx:if="{{isHongbaoShow}}">
      <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/bg_hongbao%402x.png"></image>
      <view class="txtcont">
        <view class="title">恭喜您获得<text class="money">88</text>元红包</view>
        <view class="subtitle">邀请好友助力还可获得更多奖励</view>
        <button class="hb_inviteBtn" open-type="share">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/bg_inviteBtn%402x.png"></image>
          <text>立即邀请好友助力</text>
        </button>
      </view>
      <view class="closeBtn" bindtap="closeHongbao">点击关闭</view>
    </view>
  </view>
</scroll-view>