/* pages/activity/lottery/awarddetail/awarddetail.wxss */
@import '../lottery.wxss';
.container{
  padding-bottom: 200rpx;
}
image-loader{
  position: relative;
}
swiper{
  width:100%;
  height:100%;
}
swiper image{
  width:100%;
  height:100%;
}
.description{
  width:100%;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.description .content{
  background:#fff;
  font-size:28rpx;
  font-weight:400;
  color:#666;
  line-height:40rpx;
  box-sizing: border-box;
  padding:30rpx 50rpx;
}
.description .title{
  font-size:32rpx;
  font-weight:bold;
  color:#333;
  text-align: center;
  margin-bottom: 16rpx;
}
.cjbtn{
  width:480rpx;
  height:150rpx;
  margin: 30rpx auto;
  position:relative;
  animation: shake 1s infinite;
}
.cjbtn.cjbtndisable{
  animation: none;
}
@keyframes shake{
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.05);
  }
  100%{
    transform: scale(1);
  }
}
.cjbtn image{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}
.cjbtn .content{
  position: relative;
  width:100%;
  height:100%;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.cjbtn .content .title{
  font-size:64rpx;
  font-weight:800;
  color:#FFF304;
}
.cjbtn.cjbtndisable .content .title{
  color:#999;
}
.cjbtn .content .subtitle{
  font-size:24rpx;
  color:#FFF;
}
.cjbtn.cjbtndisable .content .subtitle{
  color:#999;
}
.progress{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width:480rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.progress .target{
  color:#333;
  font-size:24rpx;
  margin-bottom: 6rpx;
}
.progress .progressbar,.progressbar .value{
  height:18rpx;
  border-radius: 10rpx;
}
.members{
  font-size: 28rpx;
  color:#666;
  box-sizing: border-box;
  padding:0 60rpx;
}
.members .title{
  margin-bottom: 20rpx;
  text-align: center;
}
.members navigator{
  color:#FB793B;
  display: inline-block;
}
.members .list{
  font-size: 0;
}
.members .list .itm{
  width:10%;
  display: inline-block;
  box-sizing: border-box;
  padding:4rpx;
}
.members .list .itm .wrp{
  position: relative;
  width:100%;
  padding-bottom: 100%;
}
.members .list image-loader{
  width:100%;
  height:100%;
  position: initial;
}
.members .list image-loader image{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}
.detailinfo .title{
  font-size:32rpx;
  font-weight:bold;
  text-align: center;
  margin: 30rpx 0;
}
.goodsintro{
  background:#fff;
  width:100%;
  box-sizing: border-box;
}
.shareBtn{
  width:580rpx;
  height:86rpx;
  border-radius:43rpx;
  font-size:40rpx;
  font-weight:bold;
  color:#fff;
  text-align: center;
  line-height: 86rpx;
  position: fixed;
  left:50%;
  bottom:60rpx;
  margin-left:-290rpx;
  z-index: 999;
}
.joinLayer .wrp{
  width:570rpx;
  height:565rpx;
  position: relative;
  text-align: center;
}
.joinLayer .wrp .bg{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
}
.joinLayer .title{
  font-size:80rpx;
  color:#E5321D;
  margin:60rpx 0 90rpx 0;
  font-weight: 700;
}
.joinLayer .person{
  height:60rpx;
  background:#E5321D;
  border-radius:10rpx;
  line-height: 60rpx;
  font-size:30rpx;
  font-weight:400;
  color:#FFC71C;
  padding:0 40rpx;
  display: inline-block;
}
.joinLayer .subtitle{
  height:24rpx;
  font-size:24rpx;
  color:#fff;
  margin:20rpx 0 70rpx 0;
}
.joinLayer .invite{
  position: relative;
  width:454rpx;
  height:90rpx;
  line-height:90rpx;
  text-align: center;
  font-size:36rpx;
  font-weight:bold;
  color:#E5321D;
  margin:0 auto;
}
.joinLayer .invite image{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
}
.joinLayer .content{
  position: relative;
}
.joinLayer .invite text{
  position: relative;
}
.joinLayer .close{
  margin-top: 80rpx;
}
.lotterycode{
  position: relative;
  width:567rpx;
  height:141rpx;
  margin:30rpx auto;
  box-sizing: border-box;
  padding:12rpx;
}
.lotterycode image{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}
.lotterycode .content{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height:100%;
}
.lotterycode .content>view{
  background:#fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}
.lotterycode .content .l{
  width:73%;
  height:100%;
  font-size:38rpx;
}
.lotterycode .content .r{
  width:25%;
  height:100%;
  font-size:28rpx;
}
.zhongjiang{
  text-align: center;
  background: #fff;
  box-sizing: border-box;
  padding:30rpx;
  margin-top:30rpx;
}
.zhongjiang image{
  width:166rpx;
  height:190rpx;
  margin-bottom: 10rpx;
}
.zhongjiang .title{
  font-size:28rpx;
  color:#666;
  margin-bottom: 10rpx;
}
.zhongjiang .zjbtn{
  width:310rpx;
  height:60rpx;
  border-radius:30rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top:16rpx;
  font-size:28rpx;
}
.zhongjiang .zjbtn.disabled{
  border:1rpx solid #ddd;
  color:#ddd!important;
}
.awarduserlist{
  font-size: 0;
  background:#fff;
  box-sizing: border-box;
  padding:0 30rpx;
}
.awarduserlist .title{
  font-size: 32rpx;
  text-align: left;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.awarduserlist image-loader{
  width:100%;
  height:100%;
  position: initial;
}
.awarduserlist image{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}
.awarduserlist .list .itm{
  width:20%;
  display: inline-block;
  box-sizing: border-box;
  padding:10rpx;
}
.awarduserlist .list .itm .wrp{
  width:100%;
  padding-bottom: 100%;
  position: relative;
}
.awardtime{
  background:#fff;
  box-sizing: border-box;
  padding:30rpx;
}
.awardtime .time{
  font-size:32rpx;
  font-weight:bold;
  margin-bottom: 8rpx;
}
.awardtime text{
  font-weight: 400;
}
.awardtime .tip{
  font-size:20rpx;
  font-weight:300;
  color:#999999;
}