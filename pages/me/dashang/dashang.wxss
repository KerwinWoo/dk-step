/* pages/me/dashang/dashang.wxss */
.dashanglist{
  border-top:1rpx solid #eee;
}
.inforow{
  font-size:28rpx;
  width:100%;
  padding:0 30rpx;
  box-sizing: border-box;
}
.inforow .wrp{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width:100%;
  border-bottom:1rpx solid #eee;
  padding:30rpx 0;
  box-sizing: border-box;
	position: relative;
}
.inforow .pic image{
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.inforow .info .name{
  font-size:28rpx;
  font-weight:bold;
}
.inforow .info .desc{
  font-size:24rpx;
  font-weight:400;
  color:#999;
}
.inforow .info .desc .time{
  margin-right:10rpx;
}
.inforow .wrp .btn{
	width:103rpx;
	height:50rpx;
	text-align: center;
	line-height: 50rpx;
	font-size:24rpx;
	color:#FB793B;
	border-radius:25rpx;
	border:1rpx solid #FE6134;
	position: absolute;
	right:0;
	top:50%;
	margin-top:-25rpx;
}