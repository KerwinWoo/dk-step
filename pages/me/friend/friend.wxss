/* pages/me/friend/friend.wxss */
page{
  background:#fff;
  padding-bottom: 100rpx;
}
.container{
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding:30rpx;
  background:#fff;
  font-size:28rpx;
  width:100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}
.col{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.row .col:nth-of-type(1){
  width:10%;
}
.row .col:nth-of-type(2){
  width:55%;
  box-sizing: border-box;
  padding-left:30rpx;
  justify-content:flex-start;
}
.row .col:nth-of-type(3){
  width:15%;
  justify-content: flex-end;
}
.row .col:nth-of-type(4){
  width:20%;
  justify-content: flex-end;
}
.row.titlerow{
  height:88rpx;
}
.row.contentrow{
  padding:16rpx 30rpx;
}
.row.contentrow .col:nth-of-type(1) image{
  width:30rpx;
  height:37rpx;
  margin-right:14rpx;
}
.row.contentrow .col:nth-of-type(2) image-loader{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-right:14rpx;
  overflow: hidden;
  position: relative;
}
.row.contentrow .col:nth-of-type(2) image{
  width:100%;
  height:100%;
}
.row.contentrow .col:nth-of-type(2){
  font-size:30rpx;
  font-weight:bold;
}
.row .col:nth-of-type(2) text{
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width:250rpx;
  text-align: left;
}
.row.contentrow .col:nth-of-type(4) image{
  width:23rpx;
  height:20rpx;
  margin-right:6rpx;
}
.friend{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  font-size:26rpx;
}
.friend .photo{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right:20rpx;
}
.friend .photo image{
  width:100%;
  height:100%;
}
.dsbtn{
  width:103rpx;
  height:50rpx;
  font-size:24rpx;
  font-weight:400;
  color:#FB793B;
  text-align: center;
  line-height: 50rpx;
  border-radius:25rpx;
}
.banner{
  font-size:0;
}
.banner image{
  width:100%;
  height:300rpx;
}
.summary{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  height:115rpx;
}
.summary .itm{
  font-size:32rpx;
  font-weight: bold;
}
.summary .itm .title{
  font-size:24rpx;
  color:#999;
  font-weight: 400;
}
.inviteBtn{
  color:#fff;
  width:450rpx;
  height:86rpx;
  border-radius:43rpx;
  position: fixed;
  margin-left:-225rpx;
  left:50%;
  bottom:30rpx;
  font-size:40rpx;
  font-weight:bold;
  line-height: 86rpx;
}
.nodata image{
  width:450rpx;
  height:238rpx;
  margin-top:100rpx;
}