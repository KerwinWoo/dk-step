/* pages/me/friend/friend.wxss */
page{
  background:#f2f2f2;
}
.container{
  margin-top:128rpx;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding:30rpx 0;
  background:#fff;
  font-size:28rpx;
  width:100%;
  box-sizing: border-box;
}
.col{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.row.titlerow{
  background:#f2f2f2;
}
.row.contentrow{
  padding:16rpx 0;
  border-bottom: 1rpx solid #eee;
}
.row.contentrow .col:nth-of-type(1) image{
  width:30rpx;
  height:37rpx;
  margin-right:14rpx;
}
.row.contentrow .col:nth-of-type(2) image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-right:14rpx;
}
.row.contentrow .col:nth-of-type(2){
  font-size:30rpx;
  font-weight:bold;
}
.row.contentrow .col:nth-of-type(4) image{
  width:23rpx;
  height:20rpx;
  margin-right:6rpx;
}
.friend{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  font-size:26rpx;
}
.friend .photo{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right:20rpx;
}
.friend .photo image{
  width:100%;
  height:100%;
}