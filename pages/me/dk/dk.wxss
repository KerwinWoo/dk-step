/* pages/me/dk/dk.wxss */
page{
  background:#fff;
}
.t{
  height:216rpx;
  background:#fff;
  box-sizing: border-box;
  position: relative;
  width:100%;
  color:#fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.t>image{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
}
.t .content{
  position: relative;
}
.t .title{
  font-size:32rpx;
  font-weight:bold;
  margin-bottom: 6rpx;
}
.t .info{
  font-size:66rpx;
  font-weight:bold;
}
.t .info text:last-child{
  font-size:36rpx;
}
.listcont{
  padding:0 30rpx;
  background:#fff;
}
.listcont .title{
  font-size:24rpx;
  font-weight:bold;
  color:#999999;
  padding:30rpx 0 20rpx 0;
}
.list .itm{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  height:150rpx;
  padding-left:23rpx;
}
.list .itm .l{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.list .name{
  font-size:24rpx;
  color:rgba(51,51,51,1);
}
.list .detail{
  font-size: 28rpx;
  margin:10rpx 0;
  overflow: hidden;
  white-space: nowrap;
  width:520rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list .time{
  font-size:20rpx;
  color:#999999;
}
.list .r{
  font-size:28rpx;
}
.list .r .add{
  color:#FB793B;
}
.list .r .min{
  color:#5FD3D1;
}