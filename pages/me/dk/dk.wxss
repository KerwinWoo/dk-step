/* pages/me/dk/dk.wxss */
page{
  background:#f2f2f2;
}
.t{
  margin-top:128rpx;
  height:175rpx;
  background:#fff;
  margin-bottom: 24rpx;
  text-align: center;
  font-size:32rpx;
  font-weight:bold;
  box-sizing: border-box;
  padding-top:40rpx;
}
.t .title{
  margin-bottom: 16rpx;
}
.t .info{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: 300;
  font-size:26rpx;
}
.t image{
  width:26rpx;
  height:30rpx;
  margin-right:10rpx;
}
.listcont{
  padding:0 30rpx;
  background:#fff;
}
.listcont .title{
  font-size:24rpx;
  font-weight:400;
  color:#999999;
  padding:30rpx 0 20rpx 0;
}
.list .itm{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top:1px solid #eee;
  height:92rpx;
  padding-left:23rpx;
}
.list .itm .l{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.list .name{
  font-size:28rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 8rpx;
}
.list .time{
  font-size:20rpx;
  color:#999999;
}
.list .r{
  font-size:28rpx;
  color:#FFC02F;
}