<!--pages/me/index.wxml-->
<view class="container">
  <dk-nav title="我的" hasBackBtn="{{false}}" isFixed="{{true}}" theme="white" bgColor="transparent"></dk-nav>
  <view class="tp">
    <view class="content">
      <view class="wrp">
        <view class="photo">
          <image mode="aspectFill" src="{{userInfo.avatarUrl}}"></image>
        </view>
        <view class="info">
          <view class="name">
            <text>{{userInfo.nickName}}</text>
            <text class="updateBtn">更新资料</text>
          </view>
          <view class="otr">
            <text>ID : </text>
            <text>12322323</text>
            <text class="line"></text>
            <text>邀请人 : </text>
            <text>小李</text>
          </view>
        </view>
      </view>
      <navigator hover-class="none" url="/pages/me/homepage/homepage" class="personalPage">个人主页</navigator>
    </view>
    <view class="summary">
      <view class="wrp">
        <navigator class="itm" url="/pages/me/guanzhu/guanzhu" hover-class="none">
          <view class="num">{{num_guanzhu}}</view>
          <view class="name">关注</view>
        </navigator>
        <navigator class="itm" url="/pages/me/fans/fans" hover-class="none">
          <view class="num">{{num_fensi}}</view>
          <view class="name">粉丝</view>
        </navigator>
        <navigator class="itm" url="/pages/me/dashang/dashang" hover-class="none">
          <view class="num">{{num_shang}}</view>
          <view class="name">获赏</view>
        </navigator>
        <navigator class="itm" url="/pages/me/homepage/homepage" hover-class="none">
          <view class="num">{{num_tiezi}}</view>
          <view class="name">发帖</view>
        </navigator>
      </view>
    </view>
  </view>
  <view class="ordercont">
    <view class="comtitle">我的订单</view>
    <view class="row">
      <navigator class="itm" url="/pages/order/me/me?orderStatus=0" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ordericn_dfk.png"></image>
        </view>
        <view class="title">待付款</view>
        <view class="message" wx:if="{{numfk > 0}}">{{numfk}}</view>
      </navigator>
      <navigator class="itm" url="/pages/order/me/me?orderStatus=201" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ordericn_dfh.png"></image>
        </view>
        <view class="title">待发货</view>
        <view class="message" wx:if="{{numfh > 0}}">{{numfh}}</view>
      </navigator>
      <navigator class="itm" url="/pages/order/me/me?orderStatus=300" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ordericn_dsh.png"></image>
        </view>
        <view class="title">待收货</view>
        <view class="message" wx:if="{{numsh > 0}}">{{numsh}}</view>
      </navigator>
      <navigator class="itm" url="/pages/order/shouhou/shouhou" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/ordericn_sh.png"></image>
        </view>
        <view class="title">退换/售后</view>
      </navigator>
    </view>
  </view>
  
  <view class="ordercont servcont">
    <view class="comtitle">更多服务</view>
    <view class="row">
      <navigator class="itm" url="/pages/service/xinyuan/xinyuan" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_xinyuan.png"></image>
        </view>
        <view class="title">心愿清单</view>
      </navigator>
      <navigator class="itm" url="/pages/me/message/message" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_xiaoxi.png"></image>
        </view>
        <view class="title">消息通知</view>
        <view class="message-s"></view>
      </navigator>
      <navigator class="itm" url="/pages/game/record/record" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_choujiang.png"></image>
        </view>
        <view class="title">抽奖记录</view>
      </navigator>
      <navigator class="itm" url="/pages/address/addresslist" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_dizhi.png"></image>
        </view>
        <view class="title">地址管理</view>
      </navigator>
    </view>
    <view class="row">
      <button class="itm" open-type="contact">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_kefu.png"></image>
        </view>
        <view class="title">联系客服</view>
      </button>
      <button class="itm" open-type="contact">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_step.png"></image>
        </view>
        <view class="title">步数明细</view>
      </button>
      <navigator class="itm" url="/pages/service/contactus/contactus" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_lianxi.png"></image>
        </view>
        <view class="title">联系我们</view>
      </navigator>
      <navigator class="itm" url="/pages/service/questions/questions" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_wenti.png"></image>
        </view>
        <view class="title">常见问题</view>
      </navigator>
    </view>
    <view class="row">
      <navigator class="itm" url="" hover-class="none">
        <view class="imgCont">
          <image src="https://dkstep.oss-cn-beijing.aliyuncs.com/dkstep-img/sevicn_rule.png"></image>
        </view>
        <view class="title">步友规范</view>
      </navigator>
    </view>
  </view>
</view>