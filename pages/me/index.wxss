/* pages/me/index.wxss */
image{
  width:100%;
  height:100%;
}
page{
  background:#f2f2f2;
}
.tp{
  height:367rpx;
  background:linear-gradient(90deg,rgba(254,99,54,1) 0%,rgba(243,164,71,1) 100%);
  color:#fff;
  box-sizing: border-box;
  padding-top:128rpx;
  position:relative;
}
.tp .content{
  height:100%;
  box-sizing: border-box;
  padding:30rpx 30rpx 0 30rpx;
  position:relative;
}
.tp .content .photo{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  overflow: hidden;
}
.tp .content .wrp{
  padding-left:30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height:120rpx;
}
.tp .content .info{
  margin-left:30rpx;
  font-size:24rpx;
}
.tp .content .info .otr{
  color:rgba(255,255,255,.8);
}
.tp .content .name{
  font-size:32rpx;
  font-weight:bold;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.tp .content .updateBtn{
  width:103rpx;
  height:30rpx;
  background:rgba(255,255,255,1);
  border-radius:15rpx;
  text-align: center;
  line-height: 30rpx;
  text-align: center;
  font-size:20rpx;
  color:#999;
  margin-left:10rpx;
  font-weight: 400;
}
.tp .content .line{
  display: inline-block;
  width:2rpx;
  height:18rpx;
  background:rgba(255,255,255,0.8);
  border-radius:1px;
  margin:0 10rpx;
}
.tp .content .personalPage{
  position: absolute;
  right:30rpx;
  top:30rpx;
  width:116rpx;
  height:40rpx;
  background:rgba(255,171,66,1);
  border-radius:20rpx 0px 0px 20rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
}
.tp .summary{
  box-sizing: border-box;
  padding:0 30rpx;
  position: absolute;
  left:0;
  bottom:-65rpx;
  width:100%;
}
.tp .summary .wrp{
  width:100%;
  background:#fff;
  height:130rpx;
  box-shadow:0px 1rpx 20rpx 0px rgba(94,94,94,0.14);
  border-radius:65rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:0 56rpx;
  box-sizing: border-box;
}
.tp .summary .wrp .itm{
  text-align: center;
  font-size:28rpx;
  color:#333;
}
.tp .summary .wrp .itm .num{
  font-weight: bold;
  font-size: 30rpx;
}
.ordercont{
  box-sizing: border-box;
  background:#fff;
  padding:115rpx 30rpx 30rpx 30rpx;
  margin-bottom: 30rpx;
}
.servcont{
  padding:30rpx;
}
.comtitle{
  font-size:32rpx;
  font-weight:bold;
  margin-bottom: 30rpx;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size:26rpx;
  color:#000;
  text-align: center;
  box-sizing: border-box;
  padding:0 30rpx;
}
.row image{
  width:58rpx;
  height:58rpx;
}
.servcont .row{
  margin-bottom: 60rpx;
}
.ordercont .itm{
  position: relative;
}
.ordercont .itm .message{
  position: absolute;
  width:40rpx;
  height:40rpx;
  background:#FF000F;
  border-radius:50%;
  font-size:24rpx;
  text-align: center;
  line-height: 40rpx;
  color:#fff;
  top:-20rpx;
  right:-10rpx;
}
.message-s{
  width:16rpx;
  height:16rpx;
  background:#FF000F;
  border-radius:50%;
  position: absolute;
  right:20rpx;
  top:0rpx;
}