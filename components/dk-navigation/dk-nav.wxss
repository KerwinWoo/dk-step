/* components/dk-navigation/dk-nav.wxss */
.statusBar{
  width:100%;
  height:128rpx;
  text-align:center;
  font-size:36rpx;
  line-height:160rpx;
  position:absolute;
  left:0;
  top:0;
  z-index:100000;
  font-weight: bold;
}
.statusBar .backBtn{
  width:31rpx;
  height:31rpx;
  position: absolute;
  left:30rpx;
  top:50%;
}
.statusBar.fixed{
  position:fixed;
  background:#fff;
}
.statusBar.hasBorder{
  border-bottom:1rpx solid #eee;
}